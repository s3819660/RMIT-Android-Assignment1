<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory app:title="Appearance">

        <SwitchPreferenceCompat
            app:key="dark_mode"
            app:title="Enable dark mode" />

        <ListPreference
            app:defaultValue="pink"
            app:entries="@array/color_theme_entries"
            app:entryValues="@array/color_theme_values"
            app:key="color_theme"
            app:title="Color theme"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Preferences">

        <EditTextPreference
            app:key="edit_player1_name"
            app:title="Edit player 1's name"/>

        <EditTextPreference
            app:key="edit_player2_name"
            app:title="Edit player 2's name"/>

        <ListPreference
            app:defaultValue="en"
            app:entries="@array/language_entries"
            app:entryValues="@array/language_values"
            app:key="language"
            app:title="Language"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="Game Mode">

        <ListPreference
            app:defaultValue="3"
            app:entries="@array/board_grid_entries"
            app:entryValues="@array/board_grid_values"
            app:key="board_grid"
            app:title="Board grid"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

</PreferenceScreen>